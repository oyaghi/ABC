@model List<Mid_Project.Models.Trip_Buss>

<h1>Booking Page</h1>

<table class="table">
    <thead>
        <tr>
            <th>Destination</th>
            <th>start_Date</th>
            <th>end_Date</th>
            <th>bus_Number</th>
            <th>bus seats</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tripBuss in Model)
        {
            <tr>
                <td>@tripBuss.trip.destination</td>
                <td>@tripBuss.trip.start_Date</td>
                <td>@tripBuss.trip.end_Date</td>
                <td>@tripBuss.trip.bus_Number</td>
                <td>@tripBuss.buss.number_of_seats</td>
                <td>
                    <form asp-action="Book">
                        <input type="hidden" name="ID" value="@tripBuss.trip.trip_Id" />
                        <input type="submit" value="Book" class="btn btn-danger" />
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
